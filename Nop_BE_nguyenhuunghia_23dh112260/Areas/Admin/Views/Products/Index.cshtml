@model IEnumerable<Nop_BE_nguyenhuunghia_23dh112260.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>SẢN PHẨM</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
</p>
<table class="table bg-info col-lg-6 col-md-6 col-lg-3">
    <tr>
        <th class="bg-success col-lg-5 col-md-4 col-sm-2">
            @*@Html.DisplayNameFor(model => model.ProductName)*@
            SẢN PHẨM
        </th>

        <th class="bg-success col-lg-5 col-md-4 col-sm-2">
            @*@Html.DisplayNameFor(model => model.ProductPrice)*@
            GIÁ SẢN PHẨM
        </th>
        <th class="bg-success col-lg-5 col-md-4 col-sm-2">
            @*@Html.DisplayNameFor(model => model.ProductImage)*@
            HÌNH ẢNH SẢN PHẨM
        </th>
        <th class="bg-success col-lg-5 col-md-4 col-sm-2">
            @*@Html.DisplayNameFor(model => model.Category.CategoryName)*@
            DANH MỤC
        </th>
        <th class="bg-success col-lg-3 col-md-2 col-sm-1"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductImage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.ActionLink("Cập nhật", "Edit", new { id = item.CategoryID }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-primary" })
            </td>
        </tr>
        
    }

</table>
